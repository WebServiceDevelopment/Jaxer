DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE          = chrome
LIBRARY_NAME    = chrome
EXPORT_LIBRARY = 1
IS_COMPONENT    = 1
MODULE_NAME     = nsChromeModule
GRE_MODULE      = 1
LIBXUL_LIBRARY  = 1

PACKAGE_FILE = chrome.pkg

REQUIRES	= xpcom \
		  string \
		  rdf \
		  content \
		  xuldoc \
		  gfx \
		  layout \
		  locale \
		  necko \
		  dom \
		  widget \
		  js \
		  appshell \
		  toolkitcomps \
		  caps \
		  pref \
		  docshell \
		  xpconnect \
		  jar \
		  xulapp \
		  unicharutil \
		  $(NULL)

CPPSRCS		= \
		nsChromeFactory.cpp \
		nsChromeRegistry.cpp \
		nsChromeProtocolHandler.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
                $(MOZ_UNICHARUTIL_LIBS) \
                $(MOZ_COMPONENT_LIBS) \
                $(NULL)

# JAXER INSERT
ifdef MOZ_XUL_APP
DEFINES += -DMOZ_XUL_APP
endif
# END JAXER INSERT

ifneq (,$(filter gtk2,$(MOZ_WIDGET_TOOLKIT)))
EXTRA_DSO_LDOPTS += $(MOZ_GTK2_LIBS)
endif

ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
EXTRA_DSO_LDOPTS += $(TK_LIBS)
endif

include $(topsrcdir)/config/rules.mk

ifneq (,$(filter gtk2,$(MOZ_WIDGET_TOOLKIT)))
CXXFLAGS          += $(MOZ_GTK2_CFLAGS)
endif

